{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-offset-4 col-md-4">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}
    {% block fos_user_content %}{% endblock %}
    </div>
{% endblock %}